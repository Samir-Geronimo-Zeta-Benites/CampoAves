            <input id="nombre" name="nombre" type="text" placeholder="Ingresa tu Nombre" autocomplete="cc-name" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 px-2 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6">
          </div>
        </div>
        <div>
          <label for="apellidos" class="block text-sm font-medium leading-6">Apellidos</label>
          <div class="mt-2">
            <input id="apellidos" name="apellido" type="text" placeholder="Ingresa tu Apellidos" autocomplete="cc-name" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 px-2 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm-leading-6">
          </div>
        </div>
        <div>
          <label for="apellidos" class="block text-sm font-medium leading-6">DNI</label>
          <div class="mt-2">
            <input id="dni" name="dni" type="text" placeholder="Ingresa tu DNI" autocomplete="cc-name" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 px-2 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm-leading-6">
          </div>
        </div>
        <div>
          <label for="apellidos" class="block text-sm font-medium leading-6">Teléfono</label>
          <div class="mt-2">
            <input id="telefono" name="telefono" type="text" placeholder="Ingresa tu DNI" autocomplete="cc-name" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 px-2 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm-leading-6">
          </div>
        </div>
        <div>
          <label for="correo" class="block text-sm font-medium leading-6 text-gray-900">Correo Electronico</label>
          <div class="mt-2">
            <input id="correo" name="correo" type="email" placeholder="Ingresa tu Correo Electrónico" autocomplete="email" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 px-2 focus:ring-2 focus:ring-inset focus:ring-indigo-500 sm:text-sm sm:leading-6">
          </div>
        </div>
        <div>
          <div class="flex items-center justify-start">
            <label for="password" class="block text-sm font-medium leading-6 text-gray-900">Contraseña</label>
          </div>
          <div class="mt-2">
            <input id="password" name="contraseña" type="password" placeholder="Ingrese tu Contraseña" autocomplete="current-password" required class="block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 px-2 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6"> 
          </div>
        </div>
  
        <div>
